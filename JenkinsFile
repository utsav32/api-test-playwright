pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // Ensure this matches the name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/utsav32/api-test-playwright.git',
                credentialsId: 'github-https-playwright'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install -D @playwright/test'
                sh 'npx playwright install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npx playwright test'
            }
        }
    }

    post {
        always {
            // Publish HTML report
            publishHTML target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'playwright-report',
                reportFiles: 'index.html',
                reportName: 'Playwright Report'
            ]

        }
    }
}